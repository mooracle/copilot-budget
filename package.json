{
  "name": "copilot-budget",
  "displayName": "Copilot Budget",
  "description": "Track GitHub Copilot token usage and optionally append AI budget info to git commit messages",
  "version": "0.3.0",
  "publisher": "mooracle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mooracle/copilot-budget"
  },
  "bugs": {
    "url": "https://github.com/mooracle/copilot-budget/issues"
  },
  "homepage": "https://github.com/mooracle/copilot-budget#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copilot",
    "budget",
    "token",
    "usage",
    "tracking",
    "ai",
    "github-copilot"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": ["ui", "workspace"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-budget.showStats",
        "title": "Copilot Budget: Show Token Stats"
      },
      {
        "command": "copilot-budget.resetTracking",
        "title": "Copilot Budget: Reset Tracking"
      },
      {
        "command": "copilot-budget.installHook",
        "title": "Copilot Budget: Install Commit Hook"
      },
      {
        "command": "copilot-budget.uninstallHook",
        "title": "Copilot Budget: Uninstall Commit Hook"
      },
      {
        "command": "copilot-budget.showDiagnostics",
        "title": "Copilot Budget: Show Diagnostics"
      }
    ],
    "configuration": {
      "title": "Copilot Budget",
      "properties": {
        "copilot-budget.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Copilot Budget token usage tracking"
        },
        "copilot-budget.commitHook.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Automatically install the prepare-commit-msg hook to append AI budget info to commits"
        },
        "copilot-budget.plan": {
          "type": "string",
          "enum": ["auto", "free", "pro", "pro+", "business", "enterprise"],
          "default": "auto",
          "enumDescriptions": [
            "Auto-detect plan via GitHub API (falls back to overage rate $0.04/request if unavailable)",
            "Free plan — 50 included requests/month ($0.00/request)",
            "Pro plan — 300 included requests/month ($0.0333/request)",
            "Pro+ plan — 1500 included requests/month ($0.0260/request)",
            "Business plan — 300 included requests/month ($0.0633/request)",
            "Enterprise plan — 1000 included requests/month ($0.0390/request)"
          ],
          "description": "GitHub Copilot plan for cost calculation. Set to 'auto' to detect via API, or manually select your plan for accurate cost attribution."
        }
      }
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "sql.js": "^1.14.0"
  }
}
